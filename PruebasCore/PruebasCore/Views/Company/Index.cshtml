@model IEnumerable<PruebasCore.Models.Company>

@{
    ViewData["Title"] = "Index";
    //Layout = null;
}

<h1>Compañias</h1>

<p>
    <a asp-action="Create">Registrar Compañia</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Name)</th>
            <th> @Html.DisplayNameFor(model =>model.Address)</th>
            <th> @Html.DisplayNameFor(model =>model.Description)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var company in Model)
        {
                <tr>
                    <td> @Html.DisplayFor(m=>company.Name)</td>
                    <td> @Html.DisplayFor(m=>company.Address)</td>
                    <td> @Html.DisplayFor(m=>company.Description)</td>
                </tr> 
        }
    </tbody>
</table>

